# AWS S3 for lead storage
AWS_ACCESS_KEY_ID=AKIA...REPLACE
AWS_SECRET_ACCESS_KEY=...REPLACE
AWS_REGION=us-east-1
AWS_S3_BUCKET=stripeprotection-leads
AWS_S3_PREFIX=leads

# DynamoDB (optional) for indexing/search
DDB_TABLE=StripeProtectionLeads

# AWS SES (optional) for owner notifications on final submissions
SES_FROM=alerts@yourdomain.com
SES_TO=you@yourdomain.com
SES_REGION=us-east-1

# CRM integrations (optional)
HUBSPOT_TOKEN=pat-xxx... # HubSpot Private App token
CLOSE_API_KEY=api_...      # Close.com API key

# Admin access for /leads.html and /api/leads-list
ADMIN_TOKEN=replace-with-strong-random
